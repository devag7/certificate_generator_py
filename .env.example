# ðŸŽ“ Certificate Generator Environment Configuration
# Author: devag7 (Dev Agarwalla)
# Copy this file to .env and modify values as needed

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
ASYNC_MODE=false
WAIT_FOR_RESULT=false
DEV_MODE=true

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_LOG_LEVEL=INFO

# =============================================================================
# FILE PATHS CONFIGURATION
# =============================================================================
TEMPLATE_PATH=templates/certificate_template.jpg
FONT_PATH=fonts/Open Sans Bold.ttf
OUTPUT_DIR=certificates
TEMP_DIR=temp
LOGS_DIR=logs

# =============================================================================
# QUALITY SETTINGS
# =============================================================================
IMAGE_QUALITY=85
PDF_DENSITY=200
FONT_SIZE_NAME=50
FONT_SIZE_COLLEGE=45
FONT_SIZE_TOPIC=40
FONT_SIZE_DATE=25
FONT_SIZE_ID=20

# =============================================================================
# CERTIFICATE POSITIONING (pixels from top-left)
# =============================================================================
# Adjust these coordinates based on your template
TEXT_POS_NAME_X=90
TEXT_POS_NAME_Y=880
TEXT_POS_COLLEGE_X=90
TEXT_POS_COLLEGE_Y=1095
TEXT_POS_TOPIC_X=90
TEXT_POS_TOPIC_Y=1285
TEXT_POS_ID_X=1695
TEXT_POS_ID_Y=110
TEXT_POS_DATE_X=1650
TEXT_POS_DATE_Y=135

# =============================================================================
# CLEANUP SETTINGS
# =============================================================================
CLEANUP_DAYS=30
AUTO_CLEANUP=true
MAX_CERTIFICATE_SIZE_MB=5

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
HEALTH_CHECK_INTERVAL=300
ENABLE_METRICS=true
FLOWER_PORT=5555

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set to true in production to enable additional security features
PRODUCTION_MODE=false
ENABLE_RATE_LIMITING=false
MAX_CERTIFICATES_PER_HOUR=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=[%(asctime)s: %(levelname)s/%(name)s] %(message)s
ENABLE_FILE_LOGGING=true
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE CONFIGURATION (if using database backend)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost/certificate_db
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# =============================================================================
# EMAIL CONFIGURATION (for certificate delivery)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=certificates@yourcompany.com

# =============================================================================
# QR CODE CONFIGURATION
# =============================================================================
QR_ERROR_CORRECTION=H
QR_BOX_SIZE=10
QR_BORDER=4
QR_FILL_COLOR=#2c3e50
QR_BACK_COLOR=white

# =============================================================================
# CUSTOM BRANDING
# =============================================================================
ORGANIZATION_NAME=Your Organization
ORGANIZATION_URL=https://yourwebsite.com
SUPPORT_EMAIL=support@yourorganization.com
VERIFICATION_URL=https://yourwebsite.com/verify

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable development features
DEBUG=false
ENABLE_DEBUG_TOOLBAR=false
RELOAD_ON_CHANGE=false
